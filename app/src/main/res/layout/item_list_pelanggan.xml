<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:background="@drawable/custom_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:outlineSpotShadowColor="@color/colorShadow">

            <TextView
                android:id="@+id/TV_Nama_Pelanggan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:paddingTop="20dp"
                android:paddingBottom="80dp"
                android:text="Pelanggan"
                android:textSize="24sp"
                android:textColor="#FFFFFF"/>

            <TextView
                android:id="@+id/TV_Alamat_Pelanggan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:paddingTop="60dp"
                android:paddingBottom="80dp"
                android:text="Alamat"
                android:textSize="16sp"
                android:textColor="#FFFFFF"/>

            <TextView
                android:id="@+id/TV_NoTelp_Pelanggan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:paddingTop="90dp"
                android:paddingBottom="80dp"
                android:text="No Telp"
                android:textSize="16sp"
                android:textColor="#FFFFFF"/>

            <Button
                android:id="@+id/Update_Pelanggan"
                android:background="@drawable/custom_btn_update_delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="130dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="190dp"
                android:text="Update"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/Delete_Pelanggan"
                android:background="@drawable/custom_btn_update_delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="130dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="190dp"
                android:text="Delete"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>