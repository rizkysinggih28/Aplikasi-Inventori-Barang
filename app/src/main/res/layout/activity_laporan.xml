<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LaporanActivity">

    <TextView
        android:id="@+id/TV_Back_Laporan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:drawableStart="@drawable/ic_arrow_back_white_30dp"/>

    <Button
        android:id="@+id/Btn_LaporanBarang"
        android:background="@drawable/custom_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:text="Laporan Barang"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/Btn_LaporanSupplier"
        android:background="@drawable/custom_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:text="Laporan Supplier"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/Btn_LaporanPelanggan"
        android:background="@drawable/custom_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:text="Laporan Pelanggan"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/Btn_LaporanBarangMasuk"
        android:background="@drawable/custom_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="340dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:text="Laporan Barang Masuk"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/Btn_LaporanBarangKeluar"
        android:background="@drawable/custom_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="420dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:text="Laporan Barang Keluar"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#FFFFFF"/>
</RelativeLayout>